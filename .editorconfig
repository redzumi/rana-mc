# .editorconfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
max_line_length = 120

[*.js]
indent_style = tab
indent_size = 2
max_line_length = 120

[*.ts]
indent_style = tab
indent_size = 2
max_line_length = 120

[*.json]
indent_style = tab
indent_size = 2

[*.yml]
indent_style = tab
indent_size = 2
